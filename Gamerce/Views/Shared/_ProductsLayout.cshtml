@model IEnumerable<Gamerce.Models.Product>

<div class="panel-body">
    
<div class="table-responsive">
    
    <table id="productsTable" class="table table-striped table-hover">
        <thead>
           <tr>
                <th class ="table-header-sort" style="cursor:pointer" onclick="sortTable(0)">
                    @Html.DisplayNameFor(model => model.Title)&#9660 
                </th>
                <th class ="table-header-sort" style="cursor:pointer" onclick="sortTable(1)">
                    @Html.DisplayNameFor(model => model.GameSystem)&#9660  
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class ="table-header-sort" style="cursor:pointer" onclick="sortTable(4)">
                    @Html.DisplayNameFor(model => model.Condition)&#9660 
                </th>
                <th class ="table-header-sort" style="cursor:pointer" onclick="sortTable(5)">
                    @Html.DisplayNameFor(model => model.Genre)&#9660 
                </th>
                <th class ="table-header-sort" style="cursor:pointer" onclick="sortTable(6)">
                    @Html.DisplayNameFor(model => model.SaleStatus)&#9660  
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostingDate) 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductUserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductID"> @Html.DisplayFor(modelItem => item.Title)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameSystem.ProductSystem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition.ProductCondition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.ProductGenre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleStatus.ProductSaleStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductUserName)
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
    </div>

