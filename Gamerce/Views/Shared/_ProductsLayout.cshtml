@model IEnumerable<Gamerce.Models.Product>

<div class="panel-body">
    
<div class="table-responsive">
    
    <table id="productsTable" class="table table-striped table-hover">
        <thead>
           <tr>
                <th style="cursor:pointer" onclick="sortTable(0)" class="productTitle">
                    @Html.DisplayNameFor(model => model.Title) 
                </th>
                <th style="cursor:pointer" onclick="sortTable(1)" class="productSystem">
                    @Html.DisplayNameFor(model => model.GameSystem) 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th class="ProductPrice">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th style="cursor:pointer" onclick="sortTable(4)" class="ProductCondition">
                    @Html.DisplayNameFor(model => model.Condition) 
                </th>
                <th style="cursor:pointer" onclick="sortTable(5)" class="ProductGenre">
                    @Html.DisplayNameFor(model => model.Genre) 
                </th>
                <th style="cursor:pointer" onclick="sortTable(6)" class="ProductSaleStatus">
                    @Html.DisplayNameFor(model => model.SaleStatus) 
                </th>
                <th class="ProductPostingDate">
                    @Html.DisplayNameFor(model => model.PostingDate) 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductUserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameSystem.ProductSystem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition.ProductCondition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.ProductGenre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleStatus.ProductSaleStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductUserName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    </div>

