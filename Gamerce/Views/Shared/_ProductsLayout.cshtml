@model IEnumerable<Gamerce.Models.Product>


<div class="panel-body">
    
<p>
    <a asp-action="Create" class="btn btn-primary">Sell a game</a>
</p>

<div class="table-responsive">
    <div class="pull-right">
        <form asp-controller="Products" asp-action="" method="get">
            <label>Sort by:</label>
                <select name="sortType">
                <option value="recent" selected>Most recent</option>
                <option value="oldest">Oldest</option>
                <option value="lowest">Price: Low to high</option>
                <option value="highest">Price: High to low</option>
            </select>
            <button type="submit" class="btn btn-buy">Go</button>
        </form>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameSystem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Condition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SaleStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductUserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameSystem.ProductSystem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition.ProductCondition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.ProductGenre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleStatus.ProductSaleStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductUserName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    </div>

