@model IEnumerable<Gamerce.Models.Product>

@{
    ViewData["Title"] = "My games";
}

<div class="panel panel-primary">
    <div class="panel-heading panel-head">My games</div>
    <div class="panel-body">

<p>
    <a asp-action="Create" class="btn btn-primary">Sell another game</a>
</p>

<div class="table-responsive">
    <div class="pull-right">
        <form asp-controller="Products" asp-action="" method="get">
            <select name="sortBy">
                <option value="recent" selected>Most recent</option>
                <option value="oldest">Oldest</option>
                <option value="lowest">Price: Low to high</option>
                <option value="highest">Price: High to low</option>
            </select>
            <button type="submit" class="btn btn-buy">Go</button>
        </form>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameSystem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Condition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SaleStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostingDate)
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameSystem.ProductSystem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition.ProductCondition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.ProductGenre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleStatus.ProductSaleStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostingDate)
                    </td>                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <div class="panel-footer"></div>
</div>
        </div>


