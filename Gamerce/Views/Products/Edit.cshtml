@model Gamerce.Models.Product

@{
    ViewData["Title"] = "Edit game details";
}

<h2>Change details for @Html.DisplayFor(model => model.Title)</h2>

<h4>Current details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameSystem" class="control-label"></label>
                <select asp-for="GameSystemID" class="form-control" asp-items="ViewBag.GameSystemID" disabled></select>
                <span asp-validation-for="GameSystemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <textarea rows=5 asp-for="ProductDescription" class="form-control"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="GenreID" class="form-control" asp-items="ViewBag.GenreID"></select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="ConditionID" class="form-control" asp-items="ViewBag.ConditionID" disabled></select>
                <span asp-validation-for="ConditionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="SaleStatus" class="control-label"></label>
                <select asp-for="SaleStatusID" class="form-control" asp-items="ViewBag.SaleStatusID"></select>
                <span asp-validation-for="SaleStatusID" class="text-danger"></span>
            </div>         
           
            <div class="form-group">
                <label asp-for="PostingDate" class="control-label"></label>
                <input asp-for="PostingDate" class="form-control" disabled/>
                <span asp-validation-for="PostingDate" class="text-danger"></span>
            
            </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
    </form>
</div>
</div>

<div>
    <a asp-action="MyProducts">Back to my games</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
