@model Gamerce.Models.Product

@{
    ViewData["Title"] = "Sell your game";
}

<div class="panel panel-primary">
    <div class="panel-heading panel-head">Sell your game</div>
    <div class="panel-body">
<h4>Enter details of the game you wish to sell.</h4>
<hr />
<div class="row">
    
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <select asp-for="GenreID" class="form-control" asp-items="ViewBag.GenreID">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="GameSystem" class="control-label"></label>
                    <select asp-for="GameSystemID" class="form-control" asp-items="ViewBag.GameSystemID">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Condition" class="control-label"></label>
                    <select asp-for="ConditionID" class="form-control" asp-items="ViewBag.ConditionID">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <textarea rows=5 asp-for="ProductDescription" class="form-control"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SaleStatus" class="control-label"></label>
                    <select asp-for="SaleStatusID" class="form-control" asp-items="ViewBag.SaleStatusID" readonly></select>
                </div>                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div></div>
</form>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
        
    </div></div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
