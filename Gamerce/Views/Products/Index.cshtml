@model IEnumerable<Gamerce.Models.Product>

@{
    ViewData["Title"] = "Games for sale";
}

<h2>Games for sale</h2>

<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameSystem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameSystem.ProductSystem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition.ProductCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.ProductGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleStatus.ProductSaleStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUserName)
            </td>
            <td>                
                <a asp-action="Details" asp-route-id="@item.ProductID">Details</a>
          
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
