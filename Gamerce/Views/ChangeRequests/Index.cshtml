@model IEnumerable<Gamerce.Models.ChangeRequest>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BriefDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfRequest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredBy)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BriefDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority.PriorityLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.RequestStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChangeRequestID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChangeRequestID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChangeRequestID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
